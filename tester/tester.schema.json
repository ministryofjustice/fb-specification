{
  "$id": "http://gov.uk/schema/tester/v1.0.0",
  "title": "Tester",
  "type": "object",
  "properties": {
    "_id": {
      "title": "Tester",
      "type": "string"
    },
    "_blockType": {
      "title": "Type",
      "type": "string",
      "default": "ShowIf",
      "enum": ["ShowIf"]
    },
    "description": {
      "title": "Description",
      "type": "string"
    },
    "showIf": {
      "$ref": "http://gov.uk/schema/condition/v1.0.0#"
    },
    "requiredIf": {
      "$ref": "http://gov.uk/schema/condition/v1.0.0#"
    },
    "nextPage": {
      "$ref": "http://gov.uk/schema/definitions/v1.0.0#/definitions/nextPage"
    },
    "redirectIf": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "page": {
            "type": "string"
          },
          "condition": {
            "$ref": "http://gov.uk/schema/condition/v1.0.0#"
          }
        },
        "required": [
          "page",
          "condition"
        ]
      }
    }
  },
  "required": [
    "showIf"
  ]
}