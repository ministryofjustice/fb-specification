{
  "$id": "http://gov.uk/schema/date/v1.0.0",
  "title": "Date",
  "description": "Component that provides a composite date input field",
  "type": "object",
  "properties": {
    "_type": {
      "const": "date"
    },
    "dateType": {
      "title": "Date type",
      "type": "string",
      "enum": [
        "day-month-year",
        "month-year",
        "day-month",
        "year"
      ],
      "default": "day-month-year"
    },
    "validation": {
      "properties": {
        "formatMinimum": {
          "$ref": "#/definitions/validDate"
        },
        "formatMaximum": {
          "$ref": "#/definitions/validDate"
        }
      }
    }
  },
  "allOf": [
    {
      "$ref": "/schema/definitions/v1.0.0#/definitions/field"
    }
  ],
  "definitions": {
    "dateTypeEnum": {
      "day-month-year": "Day / Month / Year",
      "month-year": "Month / Year",
      "year": "Year",
      "day-month": "Day / Month"
    },
    "validDate": {
      "oneOf": [
        {
          "type": "string",
          "format": "date"
        },
        {
          "type": "string",
          "pattern": "^\\d+\\w$"
        }
      ]
    }
  }
}