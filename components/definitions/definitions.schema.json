{
  "$id": "http://gov.uk/schema/definitions/v1.0.0",
  "title": "Definitions",
  "type": "object",
  "definitions": {
    "id": {
      "title": "Id",
      "type": "string"
    },
    "name": {
      "title": "Input name",
      "type": "string"
    },
    "model": {
      "title": "Model to store field in",
      "type": "string"
    },
    "modelProperties": {
      "properties": {
        "model": {
          "$ref": "#/definitions/model"
        },
        "modelProtect": {
          "type": "boolean",
          "default": false
        }
      }
    },
    "multipleProperties": {
      "properties": {
        "multiple": {
          "type": "boolean"
        },
        "multipleMinimum": {
          "type": "number",
          "minimum": 0,
          "default": 1
        },
        "multipleMaximum": {
          "type": "number",
          "minimum": 0
        }
      },
      "allOf": [
        {
          "$ref": "#/definitions/modelProperties"
        }
      ]
    },
    "label": {
      "title": "Label",
      "type": "string"
    },
    "hint": {
      "title": "Hint text",
      "type": "string"
    },
    "labelHint": {
      "title": "Label and hint text",
      "type": "object",
      "properties": {
        "label": {
          "$ref": "#/definitions/label"
        },
        "hint": {
          "$ref": "#/definitions/hint"
        }
      }
    },
    "items": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/block"
      }
    },
    "nextPage": {
      "title": "What page (if any), and under what condtions, to go to next",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "oneOf": [
              {
                "type": "object",
                "properties": {
                  "page": {
                    "type": "string"
                  },
                  "condition": {
                    "$ref": "http://gov.uk/schema/condition/v1.0.0#/definitions/booleanOrCondition"
                  }
                },
                "required": [
                  "page",
                  "condition"
                ]
              },
              {
                "type": "string"
              }
            ]
          }
        }
      ]
    },
    "propsAttributes": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "classes": {
          "title": "Additional HTML classes",
          "type": "string"
        },
        "attributes": {
          "title": "Additional HTML attributes",
          "type": "object"
        }
      }
    },
    "widthClassMap": {
      "10": "govuk-c-input--width-10",
      "20": "govuk-c-input--width-20",
      "30": "govuk-c-input--width-30",
      "three-quarters": "govuk-!-width-three-quarters",
      "two-thirds": "govuk-!-width-two-thirds",
      "one-half": "govuk-!-width-one-half",
      "one-third": "govuk-!-width-one-third",
      "one-quarter": "govuk-!-width-one-quarter"
    },
    "widthClass": {
      "type": "string",
      "enumMap": "widthClassMap",
      "enum": [
        "three-quarters",
        "two-thirds",
        "one-half",
        "one-third",
        "one-quarter"
      ]
    },
    "widthClassInput": {
      "type": "string",
      "enumMap": "widthClassMap",
      "enum": [
        "10",
        "20",
        "30",
        "three-quarters",
        "two-thirds",
        "one-half",
        "one-third",
        "one-quarter"
      ]
    },
    "data": {
      "type": "object",
      "properties": {
        "_id": {
          "title": "Data ID",
          "type": "string"
        },
        "_type": {
          "title": "Data type",
          "type": "string"
        },
        "_isa": {
          "title": "Based on",
          "type": "string",
          "blockReference": true
        }
      },
      "required": [
        "_id",
        "_type"
      ]
    },
    "showComponent": {
      "type": "object",
      "properties": {
        "show": {
          "title": "Whether to show block or not",
          "oneOf": [
            {
              "$ref": "http://gov.uk/schema/condition/v1.0.0#/definitions/booleanOrCondition"
            }
          ],
          "default": true
        }
      },
      "allOf": [
        {
          "$ref": "#/definitions/data"
        }
      ]
    },
    "page": {
      "type": "object",
      "category": [
        "page"
      ],
      "properties": {
        "url": {
          "title": "URL",
          "type": "string"
        },
        "heading": {
          "title": "Heading",
          "type": "string"
        },
        "title": {
          "title": "Title",
          "type": "string"
        },
        "lede": {
          "title": "Lede",
          "type": "string"
        },
        "content": {
          "title": "Content",
          "type": "string",
          "multiline": true
        },
        "items": {
          "title": "Items",
          "type": "array",
          "items": {
            "type": "string",
            "blockReference": true
          }
        }
      },
      "allOf": [
        {
          "$ref": "#/definitions/showComponent"
        }
      ],
      "required": [
        "url",
        "heading"
      ]
    },
    "contentPage": {
      "type": "object",
      "category": [
        "contentPage"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/page"
        }
      ]
    },
    "formPage": {
      "type": "object",
      "category": [
        "formPage"
      ],
      "properties": {
        "extraItems": {
          "title": "Additional items following continue button",
          "type": "array",
          "items": {
            "type": "string",
            "blockReference": true
          }
        },
        "steps": {
          "title": "Steps",
          "type": "array",
          "items": {
            "type": "string",
            "blockReference": true
          }
        },
        "nextPage": {
          "$ref": "#/definitions/nextPage"
        }
      },
      "allOf": [
        {
          "$ref": "#/definitions/page"
        },
        {
          "$ref": "#/definitions/multipleProperties"
        }
      ]
    },
    "block": {
      "type": "object",
      "category": [
        "block"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/showComponent"
        }
      ]
    },
    "option": {
      "type": "object",
      "properties": {
        "value": {
          "title": "Option value",
          "type": "string"
        }
      },
      "allOf": [
        {
          "$ref": "#/definitions/showComponent"
        },
        {
          "$ref": "#/definitions/labelHint"
        }
      ],
      "required": [
        "value"
      ]
    },
    "grouping": {
      "type": "object",
      "category": [
        "grouping"
      ],
      "properties": {
        "items": {
          "$ref": "#/definitions/items"
        }
      },
      "allOf": [
        {
          "$ref": "#/definitions/block"
        },
        {
          "$ref": "#/definitions/modelProperties"
        },
        {
          "$ref": "#/definitions/propsAttributes"
        }
      ]
    },
    "content": {
      "type": "object",
      "category": [
        "content"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/block"
        },
        {
          "$ref": "#/definitions/propsAttributes"
        }
      ]
    },
    "control": {
      "type": "object",
      "category": [
        "control"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/block"
        },
        {
          "$ref": "#/definitions/propsAttributes"
        },
        {
          "$ref": "#/definitions/modelProperties"
        },
        {
          "$ref": "http://gov.uk/schema/validations/v1.0.0#/definitions/requiredBundle"
        }
      ],
      "properties": {
        "disabled": {
          "title": "Disabled",
          "oneOf": [
            {
              "$ref": "http://gov.uk/schema/condition/v1.0.0#/definitions/booleanOrCondition"
            }
          ],
          "default": false
        }
      }
    },
    "field": {
      "type": "object",
      "category": [
        "field"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/control"
        },
        {
          "$ref": "#/definitions/labelHint"
        }
      ],
      "properties": {
        "name": {
          "$ref": "#/definitions/name"
        }
      },
      "required": [
        "name",
        "label"
      ]
    },
    "fieldset": {
      "type": "object",
      "allOf": [
        {
          "$ref": "#/definitions/control"
        }
      ],
      "properties": {
        "legend": {
          "title": "Legend",
          "type": "string"
        },
        "hint": {
          "title": "Hint text",
          "type": "string"
        }
      },
      "required": [
        "legend"
      ]
    }
  }
}