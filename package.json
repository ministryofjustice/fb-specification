{
  "name": "@ministryofjustice/fb-specification",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm-run-all -s lint test:unit",
    "test:unit": "npm-run-all -s test:schemas",
    "test:schemas": "tape tests/**/*.unit.spec.js",
    "validate": "SCHEMA=$1; echo test -r definitions/definitions.schema.json -r condition/condition.schema.json -s \"$SCHEMA/$SCHEMA.schema.json\" -d \"$SCHEMA/data/valid/*.json\" --valid",
    "lint": "npm-run-all -p lint:schemas lint:data",
    "lint:schemas": "node bin/lint-schemas.js",
    "lint:schemas:cli": "find specifications/**/*.schema.json | xargs -P 20 -L 1 jsonlint -q",
    "format:schemas": "find specifications/**/*.schema.json | xargs -P 20 -L 1 jsonlint -qi",
    "lint:data": "find specifications/**/data/**/*.json | xargs -P 20 -L 1 jsonlint -q",
    "format:data": "find specifications/**/data/**/*.json | xargs -P 20 -L 1 jsonlint -qi"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ministryofjustice/fb-utils-node": "^0.1.0",
    "ajv": "^6.4.0",
    "ajv-cli": "^3.0.0",
    "glob": "^7.1.2",
    "json-schema-merge-allof": "^0.6.0",
    "json-schema-ref-parser": "^5.0.3",
    "jsonlint": "^1.6.3",
    "jsonpath": "^1.0.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.2",
    "shelljs": "^0.8.2",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@ministryofjustice/eslint-config-fb": "^1.0.1",
    "glob-promise": "^3.4.0",
    "tape": "^4.9.0",
    "tape-promise": "^3.0.0"
  }
}
