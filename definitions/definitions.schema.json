{
  "$id": "http://gov.uk/schema/definitions/v1.0.0",
  "title": "Definitions",
  "type": "object",
  "validations": {
    "$ref": "http://gov.uk/schema/validations/v1.0.0#/definitions"
  },
  "definitions": {
    "model": {
      "title": "Model to store field in",
      "type": "string"
    },
    "booleanOrCondition": {
      "oneOf": [{
          "type": "boolean"
        },
        {
          "$ref": "http://gov.uk/schema/condition/v1.0.0#"
        }
      ]
    },
    "nextPage": {
      "title": "What page (if any), and under what condtions, to go to next",
      "oneOf": [{
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "oneOf": [{
              "type": "object",
              "properties": {
                "page": {
                  "type": "string"
                },
                "condition": {
                  "$ref": "#/definitions/booleanOrCondition"
                }
              },
              "required": [
                "page",
                "condition"
              ]
            },
            { "type" : "string" }
          ]
          }
        }
      ]
    },
    "block": {
      "type": "object",
      "properties": {
        "_id": {
          "title": "Block ID",
          "type": "string"
        },
        "_type": {
          "title": "Data type",
          "type": "string"
        },
        "_isa": {
          "title": "Based on",
          "type": "string",
          "blockReference": true
        },
        "show": {
          "title": "Whether to show block or not",
          "allOf": [{
            "$ref": "#/definitions/booleanOrCondition"
          }],
          "default": true
        },
        "classes": {
          "title": "Additional HTML classes",
          "type": "string"
        },
        "attributes": {
          "title": "Additional HTML attributes",
          "type": "object"
        }
      },
      "required": [
        "_id",
        "_type"
      ]
    },
    "field": {
      "type": "object",
      "allOf": [{
          "$ref": "#/definitions/block"
        },
        {
          "$ref": "http://gov.uk/schema/validations/v1.0.0#/definitions/requiredValidation"
        },
        {
          "$ref": "http://gov.uk/schema/errors/v1.0.0#/definitions/requiredErrors"
        },
        {
          "properties": {
            "label": {
              "title": "Label",
              "type": "string"
            },
            "hint": {
              "title": "Hint text",
              "type": "string"
            },
            "name": {
              "title": "Field name",
              "type": "string"
            },
            "model": {
              "$ref": "#/definitions/model"
            },
            "disabled": {
              "title": "Disabled",
              "allOf": [{
                "$ref": "#/definitions/booleanOrCondition"
              }],
              "default": false
            }
          },
          "required": [
            "label",
            "name"
          ]
        }
      ]
    }
  }
}