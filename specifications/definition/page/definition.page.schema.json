{
  "$id": "http://gov.uk/schema/v1.0.0/definition/page",
  "_name": "definition.page",
  "title": "Page definition",
  "properties": {
    "url": {
      "title": "URL",
      "type": "string"
    },
    "heading": {
      "title": "Heading",
      "type": "string"
    },
    "title": {
      "title": "Title",
      "type": "string",
      "category": [
        "additional"
      ]
    },
    "lede": {
      "title": "Lede",
      "description": "Paragraph that follows the heading",
      "type": "string"
    },
    "content": {
      "title": "Content",
      "description": "Free-form content after the heading and lede",
      "type": "string",
      "multiline": true
    }
  },
  "allOf": [
    {
      "$ref": "http://gov.uk/schema/v1.0.0/definition/block"
    },
    {
      "$ref": "http://gov.uk/schema/v1.0.0/definition/components"
    }
  ],
  "required": [
    "url"
  ],
  "category": [
    "definition",
    "page"
  ],
  "transforms": {
    "model": {
      "propagation": "components[?(@.$control || @.$grouping)]"
    }
  }
}